{% block scss %}
$primary-font-color: white;
$footer-h1-color: #CACACA;
$primary-font: 'Source Sans Pro', sans-serif;
$secondary-font: 'Cemong';


    * {
        margin: 0 auto;
        padding: 0;
    }

    html {
        background: url(../web/images/seamlessbg.jpg);
    }

    /* ----- HEADER ----- */
    header {
        height: 100vh; /* Fallback for browsers that do not support Custom Properties */
        height: calc(var(--vh, 1vh) * 100);

        main {
            position: relative;
            align-items: center;

            button {
                height: 150px;
                width: 150px;
            }

            #download {
                height: 120px;
                width: 400px;
                border: 2px solid #707070;
                border-radius: 30px;
                background-color: rgba(67, 57, 57, 0.75);
                font-size: 62px;
                font-family: $secondary-font;
                float: right;

                &:hover {
                    background-color: rgba(85, 74, 74, 0.75);
                    cursor: pointer;
                }

                a {
                    text-decoration: none;
                    color: $primary-font-color;
                }
            }

            #image {
                margin-top: auto;

                img {
                    width: 650px;
                    max-width: 100%;
                }
            }

            #text {
                h1 {
                    &:after {
                        display: block;
                        font-size: 3.5rem;
                        content: "Awakening";
                        text-align: right;
                    }
                }
            }
        }
    }

    main {
        height: 100%;
        display: flex;
        justify-content: center;

        #text {
            color: $primary-font-color;
            font-family: $secondary-font;
            margin-top: -250px;
            z-index: 2;

            p {
                max-width: 781px;
                color: $primary-font-color;
                font-size: 2rem;
                text-align: left;
                margin: 0;
                margin: 60px 0px 45px 0px;
            }

            h1 {
                color: $primary-font-color;
                font-size: 10rem;
                max-width: 761px;
                margin: 0;
                font-weight: 100;
            }
        }
    }

    p {
        font-family: $primary-font;
        font-weight: 200;
    }

    /* ----- OVERLAYS ----- */

    #first, #second {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 540px;
    }

    #first {
        -webkit-animation: slideLeft 20s linear infinite;
        -moz-animation: slideLeft 20s linear infinite;
        -o-animation: slideLeft 20s linear infinite;
        -ms-animation: slideLeft 20s linear infinite;
        animation: slideLeft 20s linear infinite;
    }

    #second {
        -webkit-animation: slideRight 8s linear infinite;
        -moz-animation: slideRight 8s linear infinite;
        -o-animation: slideRight 8s linear infinite;
        -ms-animation: slideRight 8s linear infinite;
        animation: slideRight 8s linear infinite;
    }

    @keyframes slideLeft {
        from {
            background-position: 0 0;
        }
        to {
            background-position: 100% 0;
        }
    }
    
    @keyframes slideRight {
        from{
            background-position: 100% 0;
        }
        to{
            background-position: 0 0;
        }
    }

    #overlays_bottom {
        width: 100%;
        position: absolute;
    }

    /* ----- ABOUT ----- */
    #about {
        height: 100vh;
        border-top: 3px solid white;

        h1 {
            color: $primary-font-color;
            font-size: 5rem;
            margin: 0;
            font-weight: 100;
            font-family: $secondary-font;
            text-align: center;
            padding-top: 100px;
        }

        main {
            align-items: center;
            height: 65%;

            #image {
                img {
                    width: 500px;
                    max-width: 100%;
                }    
            }

            #text {
                margin-top: 0;

                h1 {
                    color: $primary-font-color;
                    font-size: 5rem;
                    max-width: 875px;
                    margin: 0;
                    font-weight: 100;
                }

                p {
                    font-size: 1.75rem;
                    max-width: 875px;
                    margin: 20px 0;
                    font-weight: 200;
                    text-align: center;
                }
            }
        }
    }

    /* ----- BANNERS ----- */
    #banners {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;

        .banner {
            font-family: $secondary-font;
            color: $primary-font-color;
            display: flex;
            align-items: center;
            position: relative;
            height: 420px;
    
            img {
                width: 100%;
                height: 100%;
            }
    
            &:nth-of-type(even) #text {
                padding-right: 595px;
                margin-left: 80px;
            }
    
            &:nth-of-type(odd) #text {
                padding-left: 595px;
                margin-right: 80px;
                text-align: right;
            }
    
            #text {
                position: absolute;
                
                h1 {
                    font-size: 5rem;
                    font-weight: 100;
                }
        
                p {
                    font-size: 1.75rem;
                    margin-top: 20px;
                }
            }
        }
    }

    /* ----- NEWS ----- */
    #news {
        min-height: 630px;
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        background-image: url('../web/images/greybg.jpg');
    
        .row {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-around;
            width: 100%;
        
            .newsHeader {
                flex: 1;
                text-align: center;
                font-family: $secondary-font;
                font-weight: 100;
                font-size: 5rem;
                margin: 0 0 55px 0;
            }

            .newsItem {
                .newsImage {
                    height: 240px;
                    width: 400px;
                    background: white;
                    border: 1px solid black;
            
                    img {
                        width: 100%;
                    }
                }

                .newsText {
                    width: 400px;
            
                    a {
                        text-decoration: none;
                        color: black;

                        .newsItemHeader {
                            font-family: $secondary-font;
                            font-weight: 100;
                            font-size: 1.8rem;
                            margin: 15px 0 0 0;
                        }
                    }

                    .newsContent {
                        font-size: 1rem;
                        font-family: $primary-font;
                    }
                }
            }
        }
    }



    /* ----- FOOTER ----- */
    footer {
        background: black;
        display: flex;
        flex-direction: column;

        h1 {
            font-family: $secondary-font;
            color: $footer-h1-color;
            font-size: 3rem;
            font-weight: 100;
            margin-top: 25px;
        }

        .row {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-around;
            width: 100%;
        }

        #socials {
            font-size: 3rem;
            width: 25%;
            justify-content: space-evenly;
            margin-top: 25px;

            span {
                margin: 0;
                color: $primary-font-color;
            }
        }

        #logo {
            width: 172px;
            margin-top: 25px;
        }

        #footer_nav {
            font-family: $primary-font;
            margin-top: 25px;
            font-size: 1.4rem;
            color: $primary-font-color;

            a {
                text-decoration: none;
                color: inherit;

                &:hover {
                    text-decoration: underline;
                }
            }
        }

        .copyright {
            font-size: 0.75rem;
            color: $primary-font-color;
            padding: 25px 0;
            font-family: $primary-font;
        }
    }
{% endblock %}